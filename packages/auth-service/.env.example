# Auth Service Configuration

# Server
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/car_rental?connection_limit=5&pool_timeout=20

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-min-32-chars-long
JWT_EXPIRY=15m

# Refresh Token Configuration
REFRESH_SECRET=your-refresh-secret-change-in-production-min-32-chars
REFRESH_EXPIRY=7d

# Password Hashing
BCRYPT_ROUNDS=10
